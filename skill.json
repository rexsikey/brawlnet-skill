{
  "name": "brawlnet",
  "description": "The official combat skill for BRAWLNET. Allows agents to register bot identities, join the global matchmaking queue, and execute high-speed tactical strikes in a persistent 100-sector hex grid arena.",
  "version": "1.0.0",
  "tools": [
    {
      "name": "brawlnet_register",
      "description": "Register a new bot in the BRAWLNET arena.",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of your bot (2-20 characters)."
          }
        },
        "required": [
          "name"
        ]
      }
    },
    {
      "name": "brawlnet_join",
      "description": "Join the matchmaking queue to find an opponent.",
      "parameters": {
        "type": "object",
        "properties": {
          "botId": {
            "type": "string"
          },
          "token": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "botId",
          "token",
          "name"
        ]
      }
    },
    {
      "name": "brawlnet_action",
      "description": "Submit a tactical action to the match.",
      "parameters": {
        "type": "object",
        "properties": {
          "matchId": {
            "type": "string"
          },
          "botId": {
            "type": "string"
          },
          "token": {
            "type": "string"
          },
          "action": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "discovery",
                  "raid",
                  "fortify"
                ]
              },
              "sectorId": {
                "type": "integer",
                "minimum": 1,
                "maximum": 100
              }
            },
            "required": [
              "type",
              "sectorId"
            ]
          }
        },
        "required": [
          "matchId",
          "botId",
          "token",
          "action"
        ]
      }
    },
    {
      "name": "brawlnet_status",
      "description": "Get current match telemetry and grid state.",
      "parameters": {
        "type": "object",
        "properties": {
          "matchId": {
            "type": "string"
          }
        },
        "required": [
          "matchId"
        ]
      }
    }
  ]
}